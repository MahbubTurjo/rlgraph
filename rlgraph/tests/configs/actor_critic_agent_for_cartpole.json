{
  "type": "actor_critic",
  "sample_episodes": true,
  "discount": 0.99,
  "gae_lambda": 1.0,
  "weight_entropy": 0.01,

  "python_buffer_size": 200,

  "memory_batch_size": 32,
  "memory_spec":
  {
    "type": "ring_buffer",
    "capacity": 1000
  },

  "network_spec":
  [
    {
      "type": "dense",
      "units": 32,
      "activation": "tanh",
      "scope": "hidden1"
    },
    {
      "type": "dense",
      "units": 32,
      "activation": "tanh",
      "scope": "hidden2"
    }
  ],
  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 32,
      "activation": "tanh",
      "scope": "vf-hidden1"
    },
    {
      "type": "dense",
      "units": 32,
      "activation": "tanh",
      "scope": "vf-hidden2"
    }
  ],

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": [0.01, 0.001]
  }
}
