{
  "type": "ppo",
  "sample_episodes": false,
  "standardize_advantages": true,
  "clip_ratio": [0.2, 0.1],
  "discount": 0.999,
  "gae_lambda": 1.0,
  "weight_entropy": [0.01, 0.001],

  "python_buffer_size": 200,

  "memory_batch_size": 1024,
  "num_iterations": 10,
  "sample_size": 256,
  "memory_spec":
  {
    "type": "ring_buffer",
    "capacity": 2048
  },

  "preprocessing_spec": [
    {
      "type": "moving-standardize"
    }
  ],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 512,
      "activation": "linear",
      "scope": "hidden1"
    },
        {
      "type": "dense",
      "units": 512,
      "activation": "linear",
      "scope": "hidden2"
    }
  ],

  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 512,
      "activation": "linear",
      "scope": "vf-hidden1"
    },
    {
      "type": "dense",
      "units": 512,
      "activation": "linear",
      "scope": "vf-hidden2"
    }
  ],

  "optimizer_spec": {
    "type": "rms-prop",
    "learning_rate": [0.03, 0.00001]
  },
  "value_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": [0.03, 0.00001]
  }
}
