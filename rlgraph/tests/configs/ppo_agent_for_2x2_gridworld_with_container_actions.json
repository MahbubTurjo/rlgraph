{
  "type": "ppo",

  "sample_episodes": false,
  "standardize_advantages": false,

  "clip_ratio": 0.2,
  "discount": 0.99,
  "gae_lambda": 1.0,

  "python_buffer_size": 100,

  "memory_spec":
  {
    "type": "ring-buffer",
    "capacity": 200
  },

  "preprocessing_spec":
  [
  ],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 128,
      "activation": "linear",
      "scope": "hidden"
    }
  ],

  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 128,
      "activation": "linear",
      "scope": "vf-hidden"
    }
  ],

  "update_spec": {
    "update_mode": "time_steps",
    "do_updates": true,
    "update_interval": 16,
    "batch_size": 64,
    "num_iterations": 10,
    "sample_size": 16
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0025
  }
}
