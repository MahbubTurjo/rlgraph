{
  "type": "dqn",

  "python_buffer_size": 64,
  "memory_batch_size": 24,
  "memory_spec":
  {
    "type": "replay",
    "capacity": 64
  },

  "sync_rules": {
    "sync_every_n_updates": 8
  },

  "preprocessing_spec":
  [
    {
      "type": "reshape",
      "flatten": true,
      "flatten_categories": 4
    }
  ],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 10,
      "activation": "linear",
      "scope": "hidden-layer"
    }
  ],

  "exploration_spec":
  {
    "epsilon_spec": {
      "decay_spec": {
        "type": "linear-decay",
        "from": 1.0,
        "to": 0.2
      }
    }
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.05
  }
}
