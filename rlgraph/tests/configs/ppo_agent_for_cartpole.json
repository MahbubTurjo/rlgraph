{
  "type": "ppo",
  "sample_episodes": false,
  "standardize_advantages": true,
  "clip_ratio": ["linear", 0.2, 0.01],
  "discount": 0.995,
  "gae_lambda": 1.0,
  "weight_entropy": ["linear", 0.01, 0.0001],

  "python_buffer_size": 200,

  "memory_spec":
  {
    "type": "ring_buffer",
    "capacity": 1000
  },

  "preprocessing_spec":
  [],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 32,
      "activation": "linear",
      "scope": "hidden1"
    },
    {
      "type": "dense",
      "units": 32,
      "activation": "linear",
      "scope": "hidden2"
    }
  ],
  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 32,
      "activation": "linear",
      "scope": "vf-hidden1"
    },
    {
      "type": "dense",
      "units": 32,
      "activation": "linear",
      "scope": "vf-hidden2"
    }
  ],

  "update_spec": {
    "do_updates": true,
    "update_mode": "time_steps",
    "update_interval": 16,
    "batch_size": 200,
    "num_iterations": 10,
    "sample_size": 50
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": ["linear", 0.0003, 0.000001]
  },
  
  "value_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": ["linear", 0.0003, 0.000001]
  }
}
