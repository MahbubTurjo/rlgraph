{
  "type": "sac",
  "discount": 0.99,
  "initial_alpha": 0.2,
  "gumbel_softmax_temperature": 1.0,
  "double_q": false,

  "sync_rules": {
    "sync_every_n_updates": 1,
    "sync_tau": 0.005
  },

  "python_buffer_size": 200,
  "memory_batch_size": 128,

  "memory_spec":
  {
    "type": "replay",
    "capacity": 1000
  },

  "network_spec":
  [
    {
      "type": "dense",
      "units": 32,
      "activation": "tanh",
      "scope": "hidden1"
    }
  ],
  "q_function_spec":
  [
    {
      "type": "dense",
      "units": 32,
      "activation": "tanh",
      "scope": "vf-hidden1"
    }
  ],

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": [0.005, 0.00001]
  },

  "q_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": [0.005, 0.00001]
  }
}
