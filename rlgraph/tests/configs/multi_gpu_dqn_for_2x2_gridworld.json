{
  "type": "dqn",

  "dueling_q": false,

  "python_buffer_size": 48,

  "sync_rules": {
    "sync_every_n_updates": 8
  },

  "update_spec": {
    "batch_size": 48
  },
  
  "memory_spec":
  {
    "type": "replay",
    "capacity": 48
  },

  "preprocessing_spec":
  [
    {
      "type": "reshape",
      "flatten": true,
      "flatten_categories": 4
    }
  ],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 10,
      "activation": "linear",
      "scope": "hidden-layer"
    }
  ],

  "exploration_spec": {
    "epsilon_spec": {
      "decay_spec": {
        "type": "linear_decay",
        "from": 1.0,
        "to": 0.2
      }
    }
  },

  "execution_spec": {
    "seed": 10,
    "device_strategy": "multi_gpu_sync",
    "default_device": "/device:CPU:*",
    "gpu_spec": {
      "gpus_enabled" : true,
      "max_usable_gpus": 4,
      "fake_gpus_if_necessary": true,
      "per_process_gpu_memory_fraction": 0.25,
      "allow_memory_growth": true
    },
    "disable_monitoring": false,
    "session_config": {
      "allow_soft_placement": true,
      "log_device_placement": false,
	  "device_count": {
		"CPU": 1
	  }
    }
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": [0.15, 0.001]
  }
}
