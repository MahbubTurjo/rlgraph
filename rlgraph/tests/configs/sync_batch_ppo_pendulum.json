{
  "type": "ppo",
  "sample_episodes": false,
  "standardize_advantages": true,
  "clip_ratio": 0.3,
  "discount": 0.95,
  "gae_lambda": 0.1,
  "weight_entropy": 0.00001,
  "value_function_clipping": 10.0,

  "python_buffer_size": 200,

  "memory_spec":
  {
    "type": "ring_buffer",
    "capacity": 2048
  },
   "preprocessing_spec": [
    {
      "type": "moving_standardize",
      "scope": "moving-standardize"
    }
  ],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 64,
      "activation": "relu",
      "scope": "hidden1"
    },
        {
      "type": "dense",
      "units": 64,
      "activation": "relu",
      "scope": "hidden2"
    }
  ],
  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 64,
      "activation": "relu",
      "scope": "vf-hidden1"
    },
    {
      "type": "dense",
      "units": 64,
      "activation": "relu",
      "scope": "vf-hidden2"
    }
  ],

  "update_spec": {
    "update_mode": "time_steps",
    "do_updates": true,
    "update_interval": 2048,
    "batch_size": 2048,
    "num_iterations": 10,
    "sample_size": 64
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0003
  },

  "value_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0003
  },
  "execution_spec": {
    "session_config": {
      "log_device_placement": false,
      "allow_soft_placement": true
    },
    "ray_spec": {
      "executor_spec": {
        "redis_address": null,
        "num_cpus": 4,
        "num_gpus": 0,
        "num_worker_samples": 1000,
        "num_sample_workers": 4
      },
      "worker_spec": {
        "num_worker_environments": 2,
        "num_background_envs": 1,
        "execution_spec": {
          "gpu_spec": { "gpus_enabled" : false}
        },
        "compress_states": false
      }
    }
  }
}
