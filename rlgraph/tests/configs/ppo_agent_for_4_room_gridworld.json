{
  "type": "ppo",

  "sample_episodes": false,
  "standardize_advantages": true,

  "clip_ratio": 0.2,
  "discount": 0.99,
  "gae_lambda": 0.7,
  "weight_entropy": [0.25, 0.001],
  "num_iterations": 10,
  "sample_size": 64,

  "python_buffer_size": 2000,
  "memory_batch_size": 256,
  "memory_spec":
  {
    "type": "ring-buffer",
    "capacity": 2000
  },

  "preprocessing_spec":
  [
    {
      "type": "reshape",
      "flatten": true,
      "flatten_categories": 121
    }
  ],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 128,
      "activation": "linear",
      "scope": "hidden1"
    },
    {
      "type": "dense",
      "units": 128,
      "activation": "linear",
      "scope": "hidden2"
    }
  ],

  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 32,
      "activation": "linear",
      "scope": "vf-hidden1"
    },
    {
      "type": "dense",
      "units": 32,
      "activation": "linear",
      "scope": "vf-hidden2"
    }
  ],

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": [0.001, 0.000001]
  },
  "value_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": [0.001, 0.0001]
  }
}
