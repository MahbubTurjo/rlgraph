{
  "type": "dqn",

  "python_buffer_size": 64,
  "memory_batch_size": 16,
  "memory_spec":
  {
    "type": "replay",
    "capacity": 64
  },

  "sync_rules": {
    "sync_every_n_updates": 8
  },

  "preprocessing_spec":
  [
    {
      "type": "reshape",
      "flatten": true,
      "flatten_categories": 16
    }
  ],

  "policy_spec": {
    "network_spec": [
      {
        "type": "dense",
        "units": 16,
        "activation": "linear",
        "scope": "hidden-layer"
      }
    ]
  },

  "exploration_spec":
  {
    "epsilon_spec": {
      "decay_spec": ["linear", 1.0, 0.0]
    }
  }
}
