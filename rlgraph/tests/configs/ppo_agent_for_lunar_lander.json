{
  "type": "ppo",
  "sample_episodes": false,
  "standardize_advantages": true,
  "clip_ratio": ["linear", 0.2, 0.1],
  "discount": 0.95,
  "gae_lambda": 0.1,
  "weight_entropy": ["linear", 0.01, 0.0001],
  "num_iterations": 10,
  "sample_size": 64,

  "python_buffer_size": 200,
  "memory_batch_size": 2048,
  "memory_spec":
  {
    "type": "ring_buffer",
    "capacity": 2048
  },

  "network_spec":
  [
    {
      "type": "dense",
      "units": 64,
      "activation": "tanh",
      "scope": "hidden1"
    },
        {
      "type": "dense",
      "units": 64,
      "activation": "tanh",
      "scope": "hidden2"
    }
  ],

  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 64,
      "activation": "relu",
      "scope": "vf-hidden1"
    },
    {
      "type": "dense",
      "units": 64,
      "activation": "relu",
      "scope": "vf-hidden2"
    }
  ],

  "optimizer_spec": {
    "type": "adadelta",
    "learning_rate": ["linear", 0.0003, 0.0000001]
  },

  "value_function_optimizer_spec": {
    "type": "adadelta",
    "learning_rate": ["linear", 0.0003, 0.0000001]
  }
}
