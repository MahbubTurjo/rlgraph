{
  "type": "ppo",

  "sample_episodes": false,
  "standardize_advantages": true,

  "clip_ratio": ["linear", 0.2, 0.05],
  "discount": 0.998,
  "gae_lambda": 1.0,
  "weight_entropy": [0.25, 0.001],
  "num_iterations": 10,
  "sample_size": 32,

  "python_buffer_size": 256,
  "memory_batch_size": 128,
  "memory_spec":
  {
    "type": "ring-buffer",
    "capacity": 256
  },

  "network_spec":
  [
    {
      "type": "dense",
      "units": 16,
      "activation": "linear",
      "scope": "hidden1"
    },
    {
      "type": "dense",
      "units": 16,
      "activation": "linear",
      "scope": "hidden2"
    }
  ],

  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 16,
      "activation": "linear",
      "scope": "vf-hidden1"
    },
    {
      "type": "dense",
      "units": 16,
      "activation": "linear",
      "scope": "vf-hidden2"
    }
  ],

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": ["linear", 0.01, 0.001]
  },
  "value_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": ["linear", 0.05, 0.001]
  }
}
