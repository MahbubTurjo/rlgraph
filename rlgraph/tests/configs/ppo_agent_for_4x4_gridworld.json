{
  "type": "ppo",

  "sample_episodes": false,
  "standardize_advantages": false,

  "clip_ratio": ["linear", 0.2, 0.05],
  "discount": 0.995,
  "gae_lambda": 1.0,

  "weight_entropy": {
    "type": "linear-decay",
    "from": 0.25,
    "to": 0.0001
  },

  "python_buffer_size": 256,

  "memory_spec":
  {
    "type": "ring-buffer",
    "capacity": 256
  },

  "preprocessing_spec":
  [
  ],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 16,
      "activation": "linear",
      "scope": "hidden1"
    },
    {
      "type": "dense",
      "units": 16,
      "activation": "linear",
      "scope": "hidden2"
    }
  ],

  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 16,
      "activation": "linear",
      "scope": "vf-hidden1"
    },
    {
      "type": "dense",
      "units": 16,
      "activation": "linear",
      "scope": "vf-hidden2"
    }
  ],

  "update_spec": {
    "do_updates": true,
    "update_mode": "time_steps",
    "update_interval": 8,
    "batch_size": 128,
    "num_iterations": 10,
    "sample_size": 32
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": ["linear", 0.0005, 0.000001]
  },
  "value_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": ["linear", 0.0005, 0.000001]
  }
}
