{
  "type": "dqn",
  "discount": 0.99,
  "n_step": 3,
  "python_buffer_size": 3000,

  "sync_rules": {
    "sync_every_n_updates": 125000
  },
  "memory_batch_size": 512,
  "memory_spec": {
    "type": "prioritized_replay",
    "capacity": 10000
  },
  "saver_spec": null,
  "preprocessing_spec": [
    {
      "type": "grayscale",
      "keep_rank": true,
      "scope": "grayscale"
    },
    {
      "type": "image_resize",
      "width": 84,
      "height": 84,
      "scope": "image_resize"
    },
    {
      "type": "convert_type",
      "to_dtype": "float",
      "scope": "convert_type"
    },
    {
      "type": "divide",
      "divisor": 255.0,
      "scope": "divide"
    },
    {
      "type": "sequence",
      "sequence_length": 4,
      "batch_size": 1,
      "add_rank": false,
      "scope": "sequence"
    }
  ],
  "network_spec": [
    {
      "type": "conv2d",
      "filters": 16,
      "kernel_size": 8,
      "strides": 4,
      "padding": "same",
      "activation": "relu",
      "scope": "conv1"
    },
    {
      "type": "conv2d",
      "filters": 32,
      "kernel_size": 4,
      "strides": 2,
      "padding": "same",
      "activation": "relu",
      "scope": "conv2"
    },
    {
      "type": "conv2d",
      "filters": 256,
      "kernel_size": 11,
      "strides": 1,
      "padding": "valid",
      "activation": "relu",
      "scope": "conv3"
    },
    {
      "type": "reshape",
      "flatten": true
    }
  ],

  "action_adapter_spec":
  {
    "type": "dueling-action-adapter",
    "units_state_value_stream": 256,
    "units_advantage_stream": 256
  },

  "exploration_spec": {
    "epsilon_spec": {
      "decay_spec": {
        "type": "constant_decay",
        "constant_value": 0.1
      }
    }
  },
  "execution_spec": {
    "gpu_spec": {
      "gpus_enabled" : false,
      "allow_memory_growth": true
    },
    "disable_monitoring": true,
    "session_config": {
		"allow_soft_placement": true,
		"device_count": {
			"CPU": 1
		}
    }
  },
  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0001,
    "clip_grad_norm": 40
  }
}
