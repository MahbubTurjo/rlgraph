{
  "type": "dqn",

  "discount": 0.99,
  "python_buffer_size": 3000,
  "memory_batch_size": 32,

  "sync_rules": {
    "sync_every_n_updates": 2500
  },

  "memory_spec":
  {
    "type": "mem_prioritized_replay",
    "capacity": 10000
  },

  "preprocessing_spec":
  [
  {
      "type": "grayscale",
      "keep_rank": true,
      "scope": "grayscale"
    },
    {
      "type": "image_resize",
      "width": 84,
      "height": 84,
      "scope": "image_resize"
    },
    {
      "type": "convert_type",
      "to_dtype": "float",
      "scope": "convert_type"
    },
    {
      "type": "divide",
      "divisor": 255.0,
      "scope": "divide"
    },
    {
      "type": "sequence",
      "sequence_length": 4,
      "batch_size": 1,
      "add_rank": false,
      "scope": "sequence"
    }
  ],

  "network_spec":
  [
    {
        "type": "conv2d",
        "filters": 32,
        "kernel_size": 8,
        "strides": 4,
        "activation": "relu",
        "scope": "conv1"
    },
    {
        "type": "conv2d",
        "filters": 64,
        "kernel_size": 4,
        "strides": 2,
        "activation": "relu",
        "scope": "conv2"
    },
    {
        "type": "conv2d",
        "filters": 64,
        "kernel_size": 3,
        "strides": 1,
        "activation": "relu",
        "scope": "conv3"
    },
    {
        "type": "reshape",
        "flatten": true
    }
  ],

  "policy_spec":
  {
    "type": "dueling-policy",
    "units_state_value_stream": 512,
    "action_adapter_spec": {
      "pre_network_spec": [
        {
          "type": "dense",
          "units": 512
        }
      ]
    }
  },

  "exploration_spec":
  {
    "epsilon_spec": {
      "decay_spec": ["linear", 1.0, 0.1]
    }
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0001,
    "clip_grad_norm": 20
  }
}
