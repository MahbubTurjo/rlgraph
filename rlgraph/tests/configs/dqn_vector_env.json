{
  "type": "dqn",

  "discount": 0.99,
  "python_buffer_size": 3000,

  "sync_rules": {
    "sync_every_n_updates": 2500
  },

  "memory_batch_size": 32,
  "memory_spec":
  {
    "type": "replay",
    "capacity": 10000
  },
  "preprocessing_spec": [
    {
      "type": "image_crop",
      "x": 0,
      "y": 25,
      "width": 160,
      "height": 160,
      "scope": "image_crop"
    },
    {
      "type": "image_resize",
      "width": 80,
      "height": 80,
      "scope": "image_resize"
    },
    {
      "type": "grayscale",
      "keep_rank": true,
      "scope": "grayscale"
    },
    {
      "type": "divide",
      "divisor": 255,
      "scope": "divide"
    },
    {
      "type": "sequence",
      "sequence_length": 4,
      "batch_size": 4,
      "add_rank": false,
      "scope": "sequence"
    }
  ],

  "network_spec":
  [
    {
        "type": "conv2d",
        "filters": 32,
        "kernel_size": 8,
        "strides": 4,
        "activation": "relu",
        "scope": "conv1"
    },
    {
        "type": "conv2d",
        "filters": 64,
        "kernel_size": 4,
        "strides": 2,
        "activation": "relu",
        "scope": "conv2"
    },
    {
        "type": "conv2d",
        "filters": 64,
        "kernel_size": 3,
        "strides": 1,
        "activation": "relu",
        "scope": "conv3"
    },
    {
        "type": "reshape",
        "flatten": true
    },
    {
        "type": "dense",
        "units": 512,
        "activation": "relu"
    }
  ],

  "exploration_spec":
  {
    "epsilon_spec": {
      "decay_spec": {
        "type": "linear-decay",
        "from": 1.0,
        "to": 0.1
      }
    }
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0001,
    "clip_grad_norm": 20
  }
}
