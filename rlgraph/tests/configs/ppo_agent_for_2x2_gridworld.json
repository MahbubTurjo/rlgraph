{
  "type": "ppo",

  "sample_episodes": false,
  "standardize_advantages": false,

  "clip_ratio": 0.2,
  "discount": 0.99,
  "gae_lambda": 0.5,

  "python_buffer_size": 16,

  "memory_batch_size": 16,
  "num_iterations": 10,
  "sample_size": 4,

  "memory_spec":
  {
    "type": "ring-buffer",
    "capacity": 100
  },

  "preprocessing_spec":
  [
  ],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 8,
      "activation": "linear",
      "scope": "hidden"
    }
  ],

  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 8,
      "activation": "linear",
      "scope": "vf-hidden"
    }
  ],

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.001
  },

  "value_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.001
  }
}
