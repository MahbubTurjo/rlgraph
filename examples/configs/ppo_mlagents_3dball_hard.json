{
  "type": "ppo",
  "sample_episodes": false,
  "standardize_advantages": false,
  "clip_ratio": [0.2, 0.1],
  "discount": 0.995,
  "gae_lambda": 0.8,
  "weight_entropy": [0.1, 0.001],

  "python_buffer_size": 200,

  "memory_spec":
  {
    "type": "ring_buffer",
    "capacity": 1000
  },

  "preprocessing_spec":
  [],

  "execution_spec": {
    "seed": 15
  },

  "network_spec":
  [
    {
      "type": "dense",
      "units": 128,
      "activation": "relu",
      "scope": "hidden1"
    },
    {
      "type": "dense",
      "units": 128,
      "activation": "relu",
      "scope": "hidden2"
    }
  ],
  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 128,
      "activation": "relu",
      "scope": "vf-hidden1"
    },
    {
      "type": "dense",
      "units": 128,
      "activation": "relu",
      "scope": "vf-hidden2"
    }
  ],

  "update_spec": {
    "update_mode": "time_steps",
    "do_updates": true,
    "update_interval": 200,
    "batch_size": 200,
    "num_iterations": 10,
    "sample_size": 50
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": [0.01, 0.00025]
  },
  "value_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": [0.01, 0.00025]
  }
}
