{
  "type": "sac",

  "discount": 0.995,
  "initial_alpha": 0.1,
  "target_entropy": -1.0,
  "double_q": true,

  "sync_rules": {
    "sync_every_n_updates": 4,
    "sync_tau": 5e-3
  },
  "memory_batch_size": 1024,
  "python_buffer_size": 1500,
  "memory_spec":
  {
    "type": "replay",
    "capacity": 10000
  },

  "preprocessing_spec":
  [],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 256,
      "activation": "relu",
      "scope": "hidden1"
    },
    {
      "type": "dense",
      "units": 256,
      "activation": "relu",
      "scope": "hidden2"
    }
  ],

  "q_function_spec":
  [
    {
      "type": "dense",
      "units": 256,
      "activation": "relu",
      "scope": "vf-hidden1"
    },
    {
      "type": "dense",
      "units": 256,
      "activation": "relu",
      "scope": "vf-hidden2"
    }
  ],

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0003
  },
  "q_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": 0.0003
  }
}
