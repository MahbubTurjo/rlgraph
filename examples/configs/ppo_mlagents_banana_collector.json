{
  "type": "ppo",

  "sample_episodes": false,
  "standardize_advantages": true,
  "clip_ratio": 0.1,
  "discount": 0.995,
  "gae_lambda": 0.8,
  "weight_entropy": 0.001,
  "num_iterations": 10,
  "sample_size": 500,

  "python_buffer_size": 1500,
  "memoory_batch_size": 1500,
  "memory_spec":
  {
    "type": "ring_buffer",
    "capacity": 3000
  },

  "preprocessing_spec":
  [],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 256,
      "activation": "relu",
      "scope": "hidden1"
    },
    {
      "type": "dense",
      "units": 256,
      "activation": "relu",
      "scope": "hidden2"
    }
  ],

  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 256,
      "activation": "relu",
      "scope": "vf-hidden1"
    },
    {
      "type": "dense",
      "units": 256,
      "activation": "relu",
      "scope": "vf-hidden2"
    }
  ],

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 3e-4
  },
  "value_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": 3e-4
  }
}
