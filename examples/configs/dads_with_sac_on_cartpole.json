{
  "environment_spec": {
    "type": "openai-gym",
    "gym_env": "CartPole-v0"
  },
  "agent_spec": {
    "type": "sac",
    "discount": 0.99,
    "initial_alpha": 1.0,
    "target_entropy": -1.0,
    "double_q": true,

    "python_buffer_size": 200,

    "sync_rules": {
      "sync_every_n_updates": 1,
      "sync_tau": 5e-3
    },

    "memory_batch_size": 256,
    "memory_spec": {
      "type": "replay",
      "capacity": 1000
    },

    "network_spec": [
      {
        "type": "dense",
        "units": 256,
        "activation": "relu",
        "scope": "hidden1"
      }
    ],
    "q_function_spec": [
      {
        "type": "dense",
        "units": 256,
        "activation": "relu",
        "scope": "vf-hidden1"
      }
    ],

    "optimizer_spec": {
      "type": "adam",
      "learning_rate": 3e-4
    },
    "q_function_optimizer_spec": {
      "type": "adam",
      "learning_rate": 3e-4
    }
  },
  "skill_dynamics_model_spec": {
    "supervised_predictor_spec": {
      "network_spec": [
        {
          "type": "dense",
          "units": 256,
          "scope": "dense-0"
        },
        {
          "type": "dense",
          "units": 256,
          "scope": "dense-1"
        }
      ],
      "distribution_adapter_spec": {
        "type": "normal-mixture-adapter",
        "num_mixtures": 5
      }
    },
    "loss_function_spec": {
      "type": "neg-log-likelihood-loss",
      "distribution_spec": {
        "type": "mixture-distribution",
        "_args": ["normal", "normal", "normal", "normal", "normal"]
      }
    },
    "optimizer_spec": {
      "type": "adam",
      "learning_rate": 0.0003
    }
  }
}
