{
  "type": "ppo",

  "sample_episodes": false,
  "standardize_advantages": true,
  "clip_ratio": 0.2,
  "discount": 0.995,
  "gae_lambda": 0.95,
  "weight_entropy": 0.001,

  "python_buffer_size": 1000,

  "memory_spec":
  {
    "type": "ring_buffer",
    "capacity": 20480
  },

  "preprocessing_spec":
  [],

  "network_spec":
  [
    {
      "type": "dense",
      "units": 512,
      "activation": "relu",
      "scope": "hidden1"
    },
    {
      "type": "dense",
      "units": 512,
      "activation": "relu",
      "scope": "hidden2"
    },
    {
      "type": "dense",
      "units": 512,
      "activation": "relu",
      "scope": "hidden3"
    }
  ],

  "value_function_spec":
  [
    {
      "type": "dense",
      "units": 512,
      "activation": "relu",
      "scope": "vf-hidden1"
    },
    {
      "type": "dense",
      "units": 512,
      "activation": "relu",
      "scope": "vf-hidden2"
    },
    {
      "type": "dense",
      "units": 512,
      "activation": "relu",
      "scope": "vf-hidden3"
    }
  ],

  "update_spec": {
    "update_mode": "time_steps",
    "do_updates": true,
    "update_interval": 2048,
    "batch_size": 2048,
    "num_iterations": 10,
    "sample_size": 512
  },

  "optimizer_spec": {
    "type": "adam",
    "learning_rate": 3e-4
  },
  "value_function_optimizer_spec": {
    "type": "adam",
    "learning_rate": 3e-4
  }
}
